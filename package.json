{
    "id": "hx-search-in-browser",
    "name": "hx-search-in-browser",
    "description": "搜索选中的文本",
    "displayName": "浏览器搜索",
    "version": "0.0.0",
    "publisher": "Noah Young",
    "engines": {
        "HBuilderX": "^2.9.9"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension",
    "scripts": {
        "pack": "node hx-pack.js"
    },
    "activationEvents": [
        "onCommand:extension.search"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.search",
                "title": "浏览器搜索"
            },
            {
                "command": "extension.search_quick_pick",
                "title": "浏览器搜索（Quick Pick）"
            },
            {
                "command": "extension.search_with_input",
                "title": "浏览器搜索（输入）"
            },
            {
                "command": "extension.search_with_Baidu",
                "title": "百度(&A)"
            },
            {
                "command": "extension.search_with_Sogou",
                "title": "搜狗(&B)"
            },
            {
                "command": "extension.search_with_Bing",
                "title": "Bing(&C)"
            },
            {
                "command": "extension.search_with_Google",
                "title": "Google(&D)"
            },
            {
                "command": "extension.search_with_360",
                "title": "360(&E)"
            },
            {
                "command": "extension.search_with_cnblogs",
                "title": "cnblogs(&F)"
            },
            {
                "command": "extension.search_with_csdn",
                "title": "csdn(&G)"
            },
            {
                "command": "extension.search_with_github",
                "title": "github(&H)"
            },
            {
                "command": "extension.search_with_stackoverflow",
                "title": "stackoverflow(&I)"
            },
            {
                "command": "extension.updateEngines",
                "title": "更新引擎"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.search",
                    "group": "assist",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "id": "extension.search.entries",
                    "title": "浏览器搜索++",
                    "group": "assist",
                    "when": "editorTextFocus"
                },
                {
                    "command": "extension.search_with_Baidu",
                    "group": "extension.search.entries@1",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_Sogou",
                    "group": "extension.search.entries@2",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_Bing",
                    "group": "extension.search.entries@3",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_Google",
                    "group": "extension.search.entries@4",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_360",
                    "group": "extension.search.entries@5",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_cnblogs",
                    "group": "extension.search.entries@6",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_csdn",
                    "group": "extension.search.entries@7",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_github",
                    "group": "extension.search.entries@8",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.search_with_stackoverflow",
                    "group": "extension.search.entries@9",
                    "when": "editorTextFocus && editorHasSelection"
                },
                {
                    "command": "extension.updateEngines",
                    "group": "extension.search.entries@9",
                    "when": "editorTextFocus"
                },
                {
                    "group": "z_commands"
                }
            ]
        },
        "configuration": {
            "title": "浏览器搜索",
            "properties": {
                "hx-search-in-browser.searchEngine": {
                    "type": "string",
                    "default": "Baidu",
                    "description": "搜索引擎",
                    "enum": [
                        "Baidu",
                        "Sogou",
                        "Bing",
                        "Google",
                        "360",
                        "cnblogs",
                        "csdn",
                        "github",
                        "stackoverflow"
                    ]
                },
                "hx-search-in-browser.useMobileEngine": {
                    "type": "boolean",
                    "default": false,
                    "description": "使用移动端引擎（使用内置浏览器时，建议勾选）"
                },
                "hx-search-in-browser.useInternalBrowser": {
                    "type": "boolean",
                    "default": false,
                    "description": "使用内置浏览器"
                },
                "hx-search-in-browser.z_execution": {
                    "type": "boolean",
                    "default": false,
                    "description": "使用自定义可执行程序（此配置优先级高于内置浏览器配置）"
                },
                "hx-search-in-browser.z_executionCmd": {
                    "type": "string",
                    "description": "cmd（字符串中%url为目标地址占位）"
                },
                "hx-search-in-browser.z_executionCwd": {
                    "type": "string",
                    "description": "cwd"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "hx-search-in-browser--container",
                    "title": "浏览器搜索"
                }
            ]
        },
        "views": {
            "hx-search-in-browser--container": [
                {
                    "id": "hx-search-in-browser",
                    "title": "搜索"
                }
            ]
        }
    },
    "configurationFiles": [
        "engines.customized.js"
    ],
    "configurationFileInfos": {
        "engines.customized.js": {
            "description": "自定义引擎"
        }
    },
    "extensionDependencies": [
        "plugin-manager"
    ],
    "devDependencies": {
        "cozip": "^0.1.0",
        "inquirer": "^8.2.4"
    }
}